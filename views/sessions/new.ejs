<div class="col-xs-offset-2 col-xs-8 col-offset-md-3 col-md-6">
  <div class=" panel panel-default ">
    <div class="panel-heading">
      <h4 class="panel-title ">Login</h4>
    </div>
    <div class="panel-body">
      <form class="form-signin" action="/login" method="post">
        <label for="login" class="sr-only">Login</label>
        <input class="form-control" type="text" name="login" value="" id="login" placeholder="Username">
        <label for="password" class="sr-only">Password</label>
        <input class="form-control" type="password" name="password" value="" id="password" placeholder="Password" />
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    </div>
  </div>
</div>
