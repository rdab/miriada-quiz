<div class="form-group">
  <label class="col-sm-4 control-label" for="preg">Pregunta</label>
  <div class="col-sm-8">
    <input class="form-control" type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>" placeholder="Pregunta" />
  </div>
</div>
<div class="form-group">
  <label class="col-sm-4 control-label" for="tema">Tema</label>
  <div class="col-sm-8">
    <select name="quiz[tema]" id="tema" class="form-control">
      <% for (var i in topics) { %>
        <% if (quiz.tema == topics[i].id) { %>
          <option value="<%= topics[i].id %>" selected><%= topics[i].name %></option>
        <% } else { %>
          <option value="<%= topics[i].id %>"><%= topics[i].name %></option>
        <% } %>
      <% } %>
    </select>
  </div>
</div>
<div class="form-group">
  <label for="resp" class="col-sm-4 control-label">Respuesta</label>
  <div class="col-sm-8">
    <input class="form-control" type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>" placeholder="Respuesta" />
  </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <a class="btn btn-default" href="/quizes">Cancelar</a>
      <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</div>
